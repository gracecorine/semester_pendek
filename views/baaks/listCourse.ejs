<%- include('../partials/header', {title : 'Courses'}) %>

    <body>
        <h1>List Courses</h1>
        <a href="/baaks">Home Baaks</a> || <a href="/baaks/students">Students</a> || <a href="/baaks/teachers">Teachers</a> || <a href="/baaks/add/courses">Add Course</a>
        <hr>
        <table border="1px">
            <tr>
                <th>Id</th>
                <th>Name Course</th>
                <th>SKS Amount</th>
                <th>Classroom</th>
                <th>Course Schedule</th>
                <th>Teacher</th>
                <th>Action</th>
            </tr>
            <% data.forEach(el => { %>
                <tr>
                    <td>
                        <%= el.id %>
                    </td>
                    <td>
                        <%= el.name %>
                    </td>
                    <td>
                        <%= el.sks_amount %>
                    </td>
                    <td>
                        <%= el.classroom %>
                    </td>
                    <td>
                        <%= el.course_schedule.toLocaleDateString() %>
                    </td>
                    <td>
                        <%= el.Teacher.first_name %>
                    </td>
                    <td>
                        <a href="/baaks/<%= el.id %>/edit/courses">Edit</a> ||
                        <a href="/baaks/<%= el.id %>/delete/courses" onclick="return confirm('Are you sure you want to delete this Student?');">Delete</a>
                    </td>
                </tr>
                <% }) %>
        </table>
        <hr>
    </body>
    <%- include('../partials/footer') %>